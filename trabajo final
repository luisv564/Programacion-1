#include <stdio.h>
#include <string.h>

int main() {
    printf("Bienvenido al programa de diagnóstico.\n");
    printf("Responde las siguientes preguntas con 'si' o 'no'.\n");

    char sintoma1[3], sintoma2[3], sintoma3[3], sintoma4[3];

    printf("¿Tienes fiebre? ");
    scanf("%s", sintoma1);

    printf("¿Tienes tos? ");
    scanf("%s", sintoma2);

    printf("¿Tienes dolor de cabeza? ");
    scanf("%s", sintoma3);

    printf("¿Tienes dolor de garganta? ");
    scanf("%s", sintoma4);

    if (strcmp(sintoma1, "si") == 0 && strcmp(sintoma2, "si") == 0) {
        printf("Podrías tener gripe.\n");
    } else if (strcmp(sintoma3, "si") == 0 && strcmp(sintoma4, "si") == 0) {
        printf("Podrías tener un resfriado.\n");
    } else {
        printf("No podemos determinar tu diagnóstico con certeza.\n");
    }

    return 0;
}
